<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="sendMessage"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Questionnaire"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="150"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/question1"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:text="Comment avez vous trouvé l'application ?"
            android:inputType="text"
            android:background="#DDDDDD"
            android:autoText="true"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_weight="149"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bouche à oreille"
            android:id="@+id/radioButton"
            android:layout_weight="149"
            android:gravity="left"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recherche google store"
            android:id="@+id/radioButton2"
            android:gravity="right"
            android:checked="false"
            android:layout_alignBaseline="@+id/radioButton"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="150"
        android:id="@+id/linearLayout2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/question2"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:text="C'est quoi le DD ?"
            android:inputType="text"
            android:background="#DDDDDD"
            android:autoText="true"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_weight="149"
            android:layout_below="@+id/radioButton"
            android:layout_marginTop="87dp"
            android:layout_alignParentEnd="true" />
    </LinearLayout>


</LinearLayout>