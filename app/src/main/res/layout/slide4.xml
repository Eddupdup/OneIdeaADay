<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffdec7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="358dp"
        android:text="Afin de déterminer votre niveau initial, nous vous proposons de répondre à un petit questionnaire qui teste vos connaissances préalables au sujet du développement durable."
        android:id="@+id/textView32"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:gravity="center_vertical"
        android:layout_weight="0.26" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Répondre"
            android:id="@+id/button8"
            android:layout_gravity="left"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passer"
            android:id="@+id/button9"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="20sp"
            android:layout_gravity="right" />
    </LinearLayout>
</LinearLayout>